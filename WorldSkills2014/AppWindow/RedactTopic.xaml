<Window x:Class="WorldSkills2014.AppWindow.RedactTopic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldSkills2014.AppWindow"
        mc:Ignorable="d"
        Title="RedactTopic" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Название топика:" HorizontalAlignment="Center" FontSize="17"></TextBlock>
            <TextBox x:Name="Topic" Margin="0,10,0,0"></TextBox>
            <Button Content="Сохранить" Margin="0,10,0,0" Name="Save" Click="Save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
